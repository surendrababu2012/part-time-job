<%- include('header.ejs'); -%>
<body>
  <%- include('nav1.ejs'); -%>

  <div class="container mt-5">
    <h1 class="mb-4">Admin Frequently Asked Questions</h1>

    <form action="/edit-faq" method="post">
        <div class="form-group row">
            <label for="faqDropdown" class="col-sm-2 col-form-label">Select FAQ to Edit:</label>
            <div class="col-sm-8">
                <select class="form-control" id="faqDropdown" name="selectedFAQ">
                    <% faqs.forEach(faq => { %>
                        <option value="<%= faq._id %>"><%= faq.quest %></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="updatedAns" class="col-sm-2 col-form-label">Enter updated answer:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="updatedAns" name="updatedAns" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit FAQ Answer</button>
            </div>
        </div>
    </form>

    <ul class="list-group mt-4">
        <% faqs.forEach(faq => { %>
            <li class="list-group-item">
                <div class="d-flex justify-content-between">
                    <div>
                        <span>Question : <%= faq.quest %></span><br>
                        <span class="ml-3">Answer : <%= faq.ans %></span>
                    </div>
                    <form action="/delete-faq/<%= faq._id %>" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </li>
        <% }); %>
    </ul>
</div>


</body>
<%- include('footer.ejs'); -%>
